
<canvas id="myChart" width="400" height="400"></canvas>
<script>
    window.onload = function(){
        const ctx = document.getElementById('myChart').getContext('2d');
        const labels=[];
        const data = [];
        dummyData.sort( (a,b) => {
            let parts = a.OrderDate.split('/');
            const d1 = Number(parts[2] + parts[1] + parts[0]);
            parts = b.OrderDate.split('/');
            const d2 = Number(parts[2] + parts[1] + parts[0]);
            return d1 - d2;
        });
        
        for (const iterator of dummyData) {
                data.push({y:iterator.TotalAmount})
                labels.push(iterator.OrderDate);
        }

        const myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Order Amount',
                    data: data,
                    backgroundColor: '#8bc34a9e',
                    borderColor: 'midnightblue',
                    pointBackgroundColor : 'midnightblue',
                    borderWidth: 1,
                    pointRadius: 5,
                    steppedLine : true
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        stacked: true,
                        
                    }]
                },
                title: {
                    display: true,
                    text: 'Trends for Order Amount',
                    fontSize: 30,
                    padding: 20
                }
            }
        });
    }   
    
</script>